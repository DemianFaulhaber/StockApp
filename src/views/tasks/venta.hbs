<tbody>
    <style>.articles{display:inline-block;}</style>
    <form method="get" action="http://localhost:4000/venta">
        <input type="text" name="codigo">
    </form>
    {{#each data}}
        <ul class="articles">
            <li class="article">codigo:<b>{{codigo}}</b></li>
            <li class="article" id="nombre">nombre:<b>{{nombre}} x{{presentacion}}kg</b></li>
            <li class="article" id="precio">precio:<b>${{precio}}</b></li>
            <li class="article">stock:<b>{{stock}}</b></li>
        </ul>
    {{/each}}
    {{#message}}
        <p>{{message}}</p>
    {{/message}}
</tbody>